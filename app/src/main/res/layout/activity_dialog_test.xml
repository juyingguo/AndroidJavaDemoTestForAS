<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DialogTestActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickShowTip"
        android:text="Button 1" />

    <Button
        android:id="@+id/btn_qr_code_scan_dialog"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickShowQRCodeScanDialog"
        android:text="click qr code scan dialog" />
    <Button
        android:id="@+id/btn_qr_code_scan_dialog_not_canceled"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickShowQRCodeScanDialogNotCanceled"
        android:text="click qr code scan dialog not canceled" />

    <Button
        android:id="@+id/btn_to_fullscreen"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickToFullscreen"
        android:text="clickToFullscreen" />
</LinearLayout>
