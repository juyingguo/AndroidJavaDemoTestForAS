<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context="com.sp.spmultipleapp.MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/tv_file_explore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="file_explore" />

            <Button
                android:id="@+id/tv_touch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="触摸测试" />
            <Button
                android:id="@+id/tv_send_broadcast_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="发送广播" />
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#aabbcc"
                />
            <Button
                android:id="@+id/tv_send_broadcast_pendingintent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="发送PendingIntent广播" />
            <Button
                android:id="@+id/tv_test_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="测试视频" />
             <Button
                android:id="@+id/btn_game_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="游戏课程" />
            <Button
                android:id="@+id/btn_linearlayout_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="linearlayout 测试" />
            <Button
                android:id="@+id/btn_view_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="view测试" />
            <Button
                android:id="@+id/btn_handler_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="handler_test" />
            <Button
                android:id="@+id/btn_install_upgrade_imitate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="install_upgrade_imitate" />
            <Button
                android:id="@+id/btn_keep_alive_service_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="keep_alive_service_test" />
            <Button
                android:id="@+id/btn_activity_task_stack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="activity_task_stack" />
            <Button
                android:id="@+id/btn_activity_image_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="activity_image_test" />
            <Button
                android:id="@+id/btn_activity_net_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="activity_net_test" />
            <Button
                android:id="@+id/btn_activity_camera_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="activity_camera_test" />
            <Button
                android:id="@+id/btn_app_detect_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="app_detect_test" />

            <Button
                android:id="@+id/btn_start_wifi_ap_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="start_wifi_ap_test" />
            <Button
                android:id="@+id/btn_big_image_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="big_image_test" />
            <Button
                android:id="@+id/btn_show_multi_image_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="show_multi_image_test" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
