<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gamecourse.GameCoursePrimaryClassActivity"
    android:orientation="vertical">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startGameCourseMode"
        android:layout_marginTop="20dp"
        android:text="开启游戏课件广播" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="exitGameCourseMode"
        android:layout_marginTop="20dp"
        android:text="退出游戏课件广播" />

    <TextView
        android:id="@+id/tv_result_asr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="TextView" />
    <TextView
        android:id="@+id/tv_result_touch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="TextView" />


</LinearLayout>